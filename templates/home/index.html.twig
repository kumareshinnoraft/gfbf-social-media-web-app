{% extends 'base.html.twig' %}

{% block title %}
Home
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/home.css')}}">
{% endblock %}

{% block body %}
{{ parent() }}

<div id="leftLoader"></div>
<div id="rightLoader"></div>

<hr />
<div class="container-fluid content">
  <div class="row">
    <div class="col-md-3 active-users">
      <ul class="list-group active-users-content">

        {% set k = 10 %}
        {% for i in range(1, k) %}
        <li class="list-group-item active-users-skeleton">
          <div class="skeleton">
            <div class="skeleton-left flex1 \">
              <div class="square circle"></div>
            </div>
            <div class="skeleton-right flex2">
              <div class="line h17"></div>
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="vertical"></div>
    {# Strating Feed #}
    <div class="col-md-9 feed">
      <ul class="list-group post-content-list">
        {# POST Content #}
        <li class="list-group-item">
          <div class="postAreaWithError">
            <span id="postArea" class="errorPostArea"></span>
            <form id="postForm" action="" method="post">
              <textarea class="form-control shadow" name="postContent" placeholder="What's on your mind..."
                id="postText" cols="40" rows="1" required></textarea>
              <img src="{{asset('img/image-icon-normal.png')}}" id="post-file" height="50" width="50" alt="">
              <input class="shadow file-upload" name="image" type="file" accept="image/*" />

              <button class="shadow" form="postForm" type="submit" id="postBtn">Post</button>
            </form>
          </div>
        </li>
        {# Skeleton POST #}
        {% set k = 10 %}
        {% for i in range(1, k) %}
        <li class="list-group-item post-skeleton">
          <div class="shadow  card">
            <div class="skeletonHeader">
              <div class="img"></div>
              <div class="details">
                <span class="name"></span>
              </div>
            </div>
            <div class="description">
              <div class="line line-1"></div>
              <div class="line line-2"></div>
              <div class="line line-3"></div>
            </div>
            <div class="btns">
              <div class="btn btn-1"></div>
              <div class="btn btn-2"></div>
              <div class="btn btn-3"></div>
            </div>
          </div>
        </li>
        {% endfor %}
        {# Real post #}
        <li class="list-group-item post-content">
      </ul>
      </li>
      </li>
      </li>
    </div>
    <div class="vertical2"></div>
    </li>
  </div>
</div>

<div id="myModal" class="modal">
  <div class="modal-content">
    <div class="textArea">
      <textarea name="" id="updatePost"></textarea>
    </div>
    <div class="btns">
      <button id="update" class="update" onclick="updateFunction(this.id)">Update</button>
      <button id="close" onclick="closeModal()">Close</button>
    </div>
    <p id="popupText"></p>
  </div>
</div>

<div id="commentModal" class="commentModal">
  <div class="modal-content">
    <div class="textArea">
      <textarea name="" id="updateCommentArea"></textarea>
    </div>
    <div class="btns">
      <button id="updateComment" class="update" onclick="updateComment(this.id)">Update</button>
      <button id="close" onclick="closeCommentModal()">Close</button>
    </div>
    <p id="popupText"></p>
  </div>
</div>

<div id="copyLinkModel" class="copyLinkModel">
  <div class="modal-content-copyArea" id="copyArea">
    <input type="text" id="linkField">
    <button id="close" onclick="copyBtn(this.parentNode.id)">Copy</button>
  </div>
</div>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="{{asset('js/home/HomeScript.js')}}"></script>
<script src="{{asset('js/home/SocketScript.js')}}"></script>
{% endblock %}
